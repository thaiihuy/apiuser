{% extends "base.html.twig" %}
{% block body %}
    <form action="/category/edit/{{ category.id }}" method="post" class="form-horizontal" role="form">
        {#<input type="hidden" name="_token" value="{{ csrf_token() }}"/>#}
        <div class="form-group">
            <legend>Form Title</legend>
        </div>
        <div class="form-group">
            <label for="inputID" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
                <input type="text" id="name" name="name" class="form-control" value="{{ category.name }}" title="" required="required">
            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>

{% endblock %}


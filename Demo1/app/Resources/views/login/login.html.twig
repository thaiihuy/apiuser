{% extends "base.html.twig" %}
{% block body %}

        <div class="form-group">
            <legend>Form Title</legend>
        </div>

        <div class="form-group">
            <label for="inputID" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
                <input type="text" id="name" name="name" class="form-control" title="" required="required">
            </div>
        </div>
        <div class="form-group">
            <label for="inputID" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
                <input type="password" id="pass" name="pass" class="form-control" title="" required="required">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <button type="submit" onclick="login()" class="btn btn-primary">Submit</button>
            </div>
        </div>

{% endblock %}


{% block javascripts %}
    <script>
       function login() {
           var name=$("#name").val();
           var pass=$("#pass").val();

           var temp={ "username":name,"pass":pass};
//           console.log(temp);
           $.ajax({
               type: "post",
               url: "/login",
               contentType: 'application/json',
               data: JSON.stringify(temp),
               success: function (res) {
                   console.log(res);
                   alert(res.pass);
               }
           });
       }
    </script>
{% endblock %}
